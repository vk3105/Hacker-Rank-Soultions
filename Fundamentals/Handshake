#include <stdio.h>
#include <string.h>
#include <math.h>
#include <stdlib.h>

int main() {

    /* Enter your code here. Read input from STDIN. Print output to STDOUT */   
    int testCases;
    int n;
    
    scanf("%d",&testCases);
    
    while(testCases--)
    {
        scanf("%d",&n);
        if(n>1)
        {
            printf("%d\n",(n*(n-1))/2);
        } else {
            printf("%d\n",0);
        }
            
    }
    
    return 0;
}
